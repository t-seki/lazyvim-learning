# EditorConfig - チーム開発での統一設定例
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{html,xml,svg}]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.{sh,bash}]
indent_size = 2

[*.{go,mod}]
indent_style = tab
indent_size = 4

[*.{rs,toml}]
indent_size = 4

[*.{php,phpt}]
indent_size = 4

[*.{rb,rake}]
indent_size = 2

[*.{java,kt}]
indent_size = 4

[*.{c,cpp,h,hpp}]
indent_size = 4

[*.{vim,nvim}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{makefile,mk}]
indent_style = tab

# プロジェクト固有の設定
[package.json]
indent_size = 2

[{tsconfig,jsconfig}.json]
indent_size = 2

[*.config.{js,ts}]
indent_size = 2

[docker-compose*.{yml,yaml}]
indent_size = 2

[Dockerfile*]
indent_size = 2